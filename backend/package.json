{
  "name": "heartbeat-backend",
  "version": "1.0.0",
  "bin": "dist/src/server.js",
  "main": "dist/src/server.js",
  "repository": "https://github.com/thoughtworks/HeartBeat.git",
  "author": "tw-heartbeat-team",
  "license": "UNLICENSED",
  "scripts": {
    "build": "yarn install & rimraf dist && yarn eslint && yarn test && tsc",
    "eslint": "eslint . --fix --ext .ts",
    "start": "yarn build && node dist/src/server.js",
    "host": "node dist/src/server.js",
    "test": "mocha -r ts-node/register **/tests/**/*.test.ts",
    "test-with-coverage": "nyc --reporter=html mocha -r ts-node/register **/tests/**/*.test.ts",
    "watch-server": "nodemon --watch src -e ts,tsx --exec ts-node src/server.ts",
    "package": "yarn build && pkg -t node12 package.json",
    "format:fix": "pretty-quick --staged"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test",
      "pre-commit": "yarn format:fix && yarn eslint"
    }
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ]
  },
  "dependencies": {
    "@koa/cors": "^3.4.1",
    "@linear/sdk": "^1.22.0",
    "@types/lodash": "^4.14.184",
    "axios": "^0.21.4",
    "csv-string": "^4.1.0",
    "csvtojson": "^2.0.10",
    "exceljs": "^4.3.0",
    "git-url-parse": "^11.6.0",
    "http-status-codes": "^1.4.0",
    "ini": "^1.3.6",
    "json2csv": "^5.0.7",
    "json2typescript": "^1.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-swagger-decorator": "^1.8.6",
    "lodash": "^4.17.19",
    "objects-to-csv": "^1.3.6",
    "parse-link-header": "^1.0.1",
    "reflect-metadata": "^0.1.13",
    "urijs": "^1.19.11"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@types/chai": "^4.3.3",
    "@types/git-url-parse": "^9.0.1",
    "@types/http-errors": "^1.8.2",
    "@types/json2csv": "^5.0.3",
    "@types/koa": "^2.13.5",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^8.0.11",
    "@types/koa-bodyparser": "^4.3.7",
    "@types/mocha": "^7.0.2",
    "@types/objects-to-csv": "^1.3.1",
    "@types/parse-link-header": "^1.0.0",
    "@types/sinon": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "axios-mock-adapter": "^1.18.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "husky": "^4.3.8",
    "inversify": "^5.1.1",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.19",
    "nyc": "^15.1.0",
    "pkg": "^4.5.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.10"
  }
}
